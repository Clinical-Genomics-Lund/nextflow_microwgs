singularity{
  enabled = true	
  runOptions = '--bind /fs1/'
}


     
params {
  // GENERAL PATHS //
  refpath = '/fs1/resources/ref/micro/'
  outdir = '/fs1/results'
  subdir = 'micro'
  crondir = "${outdir}/cron/"

  cpu_bwa = 8
  cpu_spades = 8
  cpu_many = 8
}


process {
  executor='slurm'
  queue='normal'
  time=48.h
}