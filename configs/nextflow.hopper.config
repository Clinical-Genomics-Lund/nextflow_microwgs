singularity{
  enabled = true	
  runOptions = '--bind /fs1/ --bind /local/'
}


     
params {
  // GENERAL PATHS //
  refpath = '/fs1/resources/ref/micro/'
  outdir = '/fs1/results'
  subdir = 'micro'
  crondir = "${outdir}/cron/"
  krakendb = '/fs1/resources/ref/micro/minikraken_20171101_8GB_dustmasked'
  brackendb = '/fs1/resources/ref/micro/minibracken/minikraken_8GB_125mers_distrib.txt'
  cpu_bwa = 8
  cpu_spades = 8
  cpu_many = 8
}


process {
  executor='slurm'
  queue='normal'
  time=48.h
}